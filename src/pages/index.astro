  <!-- Navigation and Carousel Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      
      // Mobile menu functionality
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
        
        // Close mobile menu when clicking on a link
        mobileNavLinks.forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
          });
        });
      }

      // Navigation Pills Active State
      const navPills = document.querySelectorAll('.nav-pill');
      const navPillsMobile = document.querySelectorAll('.nav-pill-mobile');
      const sections = document.querySelectorAll('section[id]');

      function updateActiveNavPill() {
        let currentSection = '';
        
        sections.forEach((section) => {
          const htmlSection = section as HTMLElement;
          const sectionTop = htmlSection.offsetTop;
          const sectionHeight = htmlSection.clientHeight;
          if (window.pageYOffset >= sectionTop - 200) {
            const sectionId = section.getAttribute('id');
            if (sectionId) {
              currentSection = sectionId;
            }
          }
        });

        // Update desktop nav pills
        navPills.forEach(pill => {
          const href = pill.getAttribute('href')?.substring(1);
          if (href === currentSection) {
            pill.classList.remove('bg-transparent', 'text-gray-600');
            pill.classList.add('bg-orange-500', 'text-white', 'shadow-sm');
          } else {
            pill.classList.remove('bg-orange-500', 'text-white', 'shadow-sm');
            pill.classList.add('bg-transparent', 'text-gray-600');
          }
        });

        // Update mobile nav pills
        navPillsMobile.forEach(pill => {
          const href = pill.getAttribute('href')?.substring(1);
          if (href === currentSection) {
            pill.classList.remove('bg-gray-100', 'text-gray-700');
            pill.classList.add('bg-orange-500', 'text-white');
          } else {
            pill.classList.remove('bg-orange-500', 'text-white');
            pill.classList.add('bg-gray-100', 'text-gray-700');
          }
        });
      }

      // Listen for scroll events
      window.addEventListener('scroll', updateActiveNavPill);
      
      // Smooth scroll for nav links
      [...navPills, ...navPillsMobile].forEach(pill => {
        pill.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = pill.getAttribute('href')?.substring(1);
          const targetSection = document.getElementById(targetId || '');
          if (targetSection) {
            targetSection.scrollIntoView({ behavior: 'smooth' });
          }
        });
      });

      // Fan-Style Reviews Animation
      const reviewCards = document.querySelectorAll('.review-card');
      const reviewsSection = document.getElementById('reviews');
      let reviewsAnimated = false;

      function animateReviewCards() {
        if (reviewsAnimated) return;
        reviewsAnimated = true;

        reviewCards.forEach((card) => {
          const htmlCard = card as HTMLElement;
          const delay = parseInt(card.getAttribute('data-delay') || '0');
          
          setTimeout(() => {
            // Animate in: remove opacity-0 and translate-y-8, add final transform
            htmlCard.style.opacity = '1';
            htmlCard.style.transform = htmlCard.style.transform.replace('translateY(8px)', 'translateY(0px)');
            
            // Add hover effects
            card.addEventListener('mouseenter', () => {
              const currentTransform = htmlCard.style.transform;
              const scale = 'scale(1.05)';
              
              // Add subtle forward tilt and scale
              if (!currentTransform.includes('scale')) {
                htmlCard.style.transform = currentTransform + ' ' + scale;
              }
              htmlCard.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
              htmlCard.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', () => {
              // Remove scale and reset z-index
              htmlCard.style.transform = htmlCard.style.transform.replace(' scale(1.05)', '');
              const styleAttr = card.getAttribute('style');
              htmlCard.style.zIndex = styleAttr?.includes('z-index: 3') ? '3' : 
                                     styleAttr?.includes('z-index: 2') ? '2' : '1';
            });
          }, delay);
        });
      }

      // Intersection Observer for reviews section
      const reviewsObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && entry.intersectionRatio > 0.3) {
            animateReviewCards();
          }
        });
      }, {
        threshold: 0.3,
        rootMargin: '-50px 0px'
      });

      if (reviewsSection) {
        reviewsObserver.observe(reviewsSection);
      }
    });

    // Contact Form Functionality
    document.addEventListener('DOMContentLoaded', function() {
      const contactFormBtn = document.getElementById('contact-form-btn');
      const contactFormContainer = document.getElementById('contact-form-container');
      const contactForm = document.getElementById('contact-form');
      const contactCancelBtn = document.getElementById('contact-cancel-btn');

      // Show contact form
      function showContactForm() {
        if (contactFormContainer) {
          contactFormContainer.classList.remove('hidden');
          // Ensure it's visible and properly positioned on mobile
          setTimeout(() => {
            contactFormContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }, 100);
        }
      }

      // Hide contact form
      function hideContactForm() {
        contactFormContainer.classList.add('hidden');
        if (contactForm) {
          (contactForm as HTMLFormElement).reset();
        }
      }

      // Event listeners
      if (contactFormBtn) {
        contactFormBtn.addEventListener('click', showContactForm);
      }

      if (contactCancelBtn) {
        contactCancelBtn.addEventListener('click', hideContactForm);
      }

      // Handle form submission
      if (contactForm) {
        contactForm.addEventListener('submit', function(e) {
          // Let the form submit naturally to Netlify
          // Show success message after a short delay
          setTimeout(() => {
            alert('Vielen Dank für Ihre Nachricht! Wir werden uns bald bei Ihnen melden.');
            hideContactForm();
          }, 100);
        });
      }
    });

    // Gutscheine Modal Functionality
    document.addEventListener('DOMContentLoaded', function() {
      const modal = document.getElementById('gutscheine-modal');
      const gutscheineBtn = document.getElementById('gutscheine-btn');
      const gutscheineBtnMobile = document.getElementById('gutscheine-btn-mobile');
      const closeModal = document.getElementById('close-modal');
      const cancelBtn = document.getElementById('cancel-btn');
      const form = document.getElementById('gutscheine-form') as HTMLFormElement;
      const gutscheinOptions = document.querySelectorAll('.gutschein-option');

      // Open modal
      function openModal() {
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }

      // Close modal
      function closeModalFunc() {
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
        // Reset form
        if (form) {
          form.reset();
        }
        // Reset voucher selection styling
        gutscheinOptions.forEach(option => {
          option.querySelector('div')?.classList.remove('border-orange-500', 'bg-orange-50');
          option.querySelector('div')?.classList.add('border-gray-200');
        });
      }

      // Event listeners for opening modal
      if (gutscheineBtn) {
        gutscheineBtn.addEventListener('click', openModal);
      }
      if (gutscheineBtnMobile) {
        gutscheineBtnMobile.addEventListener('click', function() {
          // Close mobile menu first
          const mobileMenu = document.getElementById('mobile-menu');
          if (mobileMenu) {
            mobileMenu.classList.add('hidden');
          }
          openModal();
        });
      }

      // Event listeners for closing modal
      if (closeModal) {
        closeModal.addEventListener('click', closeModalFunc);
      }
      if (cancelBtn) {
        cancelBtn.addEventListener('click', closeModalFunc);
      }

      // Close modal when clicking outside
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          closeModalFunc();
        }
      });

      // Close modal with ESC key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
          closeModalFunc();
        }
      });

      // Handle voucher option selection
      gutscheinOptions.forEach(option => {
        option.addEventListener('click', function() {
          // Remove selection from all options
          gutscheinOptions.forEach(opt => {
            opt.querySelector('div').classList.remove('border-orange-500', 'bg-orange-50');
            opt.querySelector('div').classList.add('border-gray-200');
            opt.querySelector('input').checked = false;
          });
          
          // Add selection to clicked option
          const div = this.querySelector('div');
          const input = this.querySelector('input');
          div.classList.remove('border-gray-200');
          div.classList.add('border-orange-500', 'bg-orange-50');
          input.checked = true;
        });
      });

      // Handle form submission
      if (form) {
        form.addEventListener('submit', function(e) {
          // Get form data for validation
          const formData = new FormData(form);
          const data = Object.fromEntries(formData);
        
          // Basic validation
          if (!data.gutschein_wert) {
            e.preventDefault();
            alert('Bitte wählen Sie einen Gutschein-Wert aus.');
            return;
          }
          
          if (!data.agb_accepted) {
            e.preventDefault();
            alert('Bitte akzeptieren Sie die AGB und Datenschutzerklärung.');
            return;
          }

          // Let the form submit naturally to Netlify
          // Show success message after a short delay
          setTimeout(() => {
            alert('Vielen Dank für Ihre Gutschein-Bestellung! Wir werden uns bald bei Ihnen melden.');
            closeModalFunc();
          }, 100);
        });
      }
    });
  </script>

