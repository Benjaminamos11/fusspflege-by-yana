      addFadeInAnimation() {
        if (this.container) {
          const photos = this.container.querySelectorAll('.instagram-photo') as NodeListOf<HTMLElement>;
          photos.forEach((photo: HTMLElement, index: number) => {
            photo.style.opacity = '0';
