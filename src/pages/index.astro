      renderPhotos(photos: any[]) {
        // Remove loading indicator
        if (this.loadingElement) {
          this.loadingElement.remove();
        }

        // Create photo elements
        photos.forEach((photo: any, index: number) => {
          const photoElement = document.createElement('a');
          photoElement.href = photo.link;
          photoElement.target = '_blank';
          photoElement.className = 'aspect-square rounded-lg overflow-hidden hover:opacity-80 transition-all duration-300 transform hover:scale-105 instagram-photo';
          photoElement.style.animationDelay = `${index * 100}ms`;

          const img = document.createElement('img');
          img.src = photo.url;
          img.alt = photo.caption;
          img.className = 'w-full h-full object-cover';
          img.loading = 'lazy';
          
          // Add error handling for images
          img.onerror = () => {
            img.src = 'data:image/svg+xml;base64,';
          };

          photoElement.appendChild(img);
          if (this.container) {
            this.container.appendChild(photoElement);
          }
        });

        // Add fade-in animation
        this.addFadeInAnimation();
