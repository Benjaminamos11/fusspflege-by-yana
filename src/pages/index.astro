  <!-- Navigation and Carousel Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      
      // Mobile menu functionality
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
        
        // Close mobile menu when clicking on a link
        mobileNavLinks.forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
          });
        });
      }

      // Navigation Pills Active State
      const navPills = document.querySelectorAll('.nav-pill');
      const navPillsMobile = document.querySelectorAll('.nav-pill-mobile');
      const sections = document.querySelectorAll('section[id]');

      function updateActiveNavPill() {
        let currentSection = '';
        
        sections.forEach((section) => {
          const htmlSection = section as HTMLElement;
          const sectionTop = htmlSection.offsetTop;
          const sectionHeight = htmlSection.clientHeight;
          if (window.pageYOffset >= sectionTop - 200) {
            const sectionId = section.getAttribute('id');
            if (sectionId) {
              currentSection = sectionId;
            }
          }
        });

        // Update desktop nav pills
        navPills.forEach(pill => {
          const href = pill.getAttribute('href')?.substring(1);
          if (href === currentSection) {
            pill.classList.remove('bg-transparent', 'text-gray-600');
            pill.classList.add('bg-orange-500', 'text-white', 'shadow-sm');
          } else {
            pill.classList.remove('bg-orange-500', 'text-white', 'shadow-sm');
            pill.classList.add('bg-transparent', 'text-gray-600');
          }
        });

        // Update mobile nav pills
        navPillsMobile.forEach(pill => {
          const href = pill.getAttribute('href')?.substring(1);
          if (href === currentSection) {
            pill.classList.remove('bg-gray-100', 'text-gray-700');
            pill.classList.add('bg-orange-500', 'text-white');
          } else {
            pill.classList.remove('bg-orange-500', 'text-white');
            pill.classList.add('bg-gray-100', 'text-gray-700');
          }
        });
      }

      // Listen for scroll events
      window.addEventListener('scroll', updateActiveNavPill);
      
      // Smooth scroll for nav links
      [...navPills, ...navPillsMobile].forEach(pill => {
        pill.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = pill.getAttribute('href')?.substring(1);
          const targetSection = document.getElementById(targetId || '');
          if (targetSection) {
            targetSection.scrollIntoView({ behavior: 'smooth' });
          }
        });
      });

      // Fan-Style Reviews Animation
      const reviewCards = document.querySelectorAll('.review-card');
      const reviewsSection = document.getElementById('reviews');
      let reviewsAnimated = false;

      function animateReviewCards() {
        if (reviewsAnimated) return;
        reviewsAnimated = true;

        reviewCards.forEach((card) => {
          const htmlCard = card as HTMLElement;
          const delay = parseInt(card.getAttribute('data-delay') || '0');
          
          setTimeout(() => {
            // Animate in: remove opacity-0 and translate-y-8, add final transform
            htmlCard.style.opacity = '1';
            htmlCard.style.transform = htmlCard.style.transform.replace('translateY(8px)', 'translateY(0px)');
            
            // Add hover effects
            card.addEventListener('mouseenter', () => {
              const currentTransform = htmlCard.style.transform;
              const scale = 'scale(1.05)';
              
              // Add subtle forward tilt and scale
              if (!currentTransform.includes('scale')) {
                htmlCard.style.transform = currentTransform + ' ' + scale;
              }
              htmlCard.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
              htmlCard.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', () => {
              // Remove scale and reset z-index
              htmlCard.style.transform = htmlCard.style.transform.replace(' scale(1.05)', '');
              const styleAttr = card.getAttribute('style');
              htmlCard.style.zIndex = styleAttr?.includes('z-index: 3') ? '3' : 
                                     styleAttr?.includes('z-index: 2') ? '2' : '1';
            });
          }, delay);
        });
      }

      // Intersection Observer for reviews section
      const reviewsObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && entry.intersectionRatio > 0.3) {
            animateReviewCards();
          }
        });
      }, {
        threshold: 0.3,
        rootMargin: '-50px 0px'
      });

      if (reviewsSection) {
        reviewsObserver.observe(reviewsSection);
      }
    });
  </script>
