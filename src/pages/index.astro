---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Fusspflege by Yana - Professionelle Fusspflege und Maniküre">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm shadow-lg z-50 fade-in-section">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <!-- Logo -->
        <div class="flex-shrink-0">
          <h1 class="font-montserrat text-xl sm:text-2xl font-bold text-primary">
            FUSSPFLEGE BY YANA
          </h1>
          <p class="text-xs text-text-light">Fusspflege & Maniküre</p>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex space-x-8">
          <a href="#hero" class="text-text hover:text-primary transition-colors font-medium">Home</a>
          <a href="#services" class="text-text hover:text-primary transition-colors font-medium">Services</a>
          <a href="#about" class="text-text hover:text-primary transition-colors font-medium">Über uns</a>
          <a href="#testimonials" class="text-text hover:text-primary transition-colors font-medium">Bewertungen</a>
          <a href="#studio" class="text-text hover:text-primary transition-colors font-medium">Studio</a>
          <a href="#contact" class="text-text hover:text-primary transition-colors font-medium">Kontakt</a>
        </div>
        
        <!-- CTA Button -->
        <div class="hidden md:block">
          <a href="#contact" class="bg-primary hover:bg-primary-dark text-white px-6 py-2 rounded-full font-semibold transition-colors">
            Termin buchen
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button id="mobile-menu-button" class="text-text hover:text-primary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="md:hidden hidden pb-4">
        <div class="flex flex-col space-y-2">
          <a href="#hero" class="text-text hover:text-primary py-2 font-medium mobile-nav-link">Home</a>
          <a href="#services" class="text-text hover:text-primary py-2 font-medium mobile-nav-link">Services</a>
          <a href="#about" class="text-text hover:text-primary py-2 font-medium mobile-nav-link">Über uns</a>
          <a href="#testimonials" class="text-text hover:text-primary py-2 font-medium mobile-nav-link">Bewertungen</a>
          <a href="#studio" class="text-text hover:text-primary py-2 font-medium mobile-nav-link">Studio</a>
          <a href="#contact" class="text-text hover:text-primary py-2 font-medium mobile-nav-link">Kontakt</a>
          <a href="#contact" class="bg-primary hover:bg-primary-dark text-white px-6 py-2 rounded-full font-semibold transition-colors text-center mt-4 mobile-nav-link">
            Termin buchen
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="hero" class="relative h-screen flex items-center justify-center overflow-hidden pt-20">
    <!-- Background Video Placeholder -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-primary/10">
      <div class="absolute inset-0 bg-black/30"></div>
      <!-- Video placeholder with gentle animation -->
      <div class="w-full h-full bg-gradient-to-br from-primary/10 via-background/50 to-primary/20 animate-pulse">
        <div class="absolute inset-0 opacity-30" style="background-image: url('data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><defs><pattern id=%22spa%22 x=%220%22 y=%220%22 width=%2220%22 height=%2220%22 patternUnits=%22userSpaceOnUse%22><circle cx=%2210%22 cy=%2210%22 r=%221%22 fill=%22%23D4AF37%22 opacity=%220.1%22/></pattern></defs><rect width=%22100%22 height=%22100%22 fill=%22url(%23spa)%22/></svg>');"></div>
      </div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center text-white px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
      <h1 class="font-montserrat text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold mb-6 animate-fade-in-up">
        <span class="block mb-2">Gönnen Sie Ihren Füssen</span>
        <span class="block text-primary">und Händen eine Auszeit.</span>
      </h1>
      
      <p class="text-xl sm:text-2xl lg:text-3xl font-light mb-8 animate-fade-in-up opacity-90" style="animation-delay: 0.2s;">
        Professionelle Fusspflege und Maniküre in einer entspannten Atmosphäre.
      </p>
      
      <a href="#contact" 
         class="btn-primary inline-block bg-primary hover:bg-primary-dark text-white font-montserrat font-semibold text-lg px-8 py-4 rounded-full transition-all duration-300 animate-fade-in-up"
         style="animation-delay: 0.4s;">
        Jetzt Termin buchen
      </a>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-gentle">
      <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/50 rounded-full mt-2"></div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 lg:py-32 bg-white fade-in-section">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-montserrat text-3xl sm:text-4xl lg:text-5xl font-bold text-text mb-6">
          Unsere Behandlungen
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12 max-w-4xl mx-auto">
        <!-- Fusspflege Card -->
        <div class="group bg-background rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-primary/5 overflow-hidden">
            <img src="https://static.wixstatic.com/media/a3b5c0_ebc161e4bfdb4a6a95353bdfa51189c2~mv2.jpg/v1/fill/w_726,h_484,al_c,q_80,usm_0.66_1.00_0.01,enc_avif,quality_auto/f6f8fbe5-c450-468e-88ae-9d17a6a370b9_JPG.jpg" 
                 alt="Professionelle Fusspflege" 
                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
          </div>
          <div class="p-8">
            <h3 class="font-montserrat text-2xl font-bold text-text mb-4">Fusspflege</h3>
            <p class="text-text-light mb-4 leading-relaxed">
              Gönnen Sie Ihren Füssen eine rundum gepflegte Auszeit – für Schönheit, Gesundheit und Wohlbefinden.
            </p>
            <div class="bg-primary/10 rounded-lg p-4 mb-6">
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-text">Kosmetische Fusspflege</span>
                  <span class="font-semibold text-text">ab CHF 95</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text">mit Peeling & Fussbad</span>
                  <span class="font-semibold text-text">ab CHF 120</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text">inkl. Gellack</span>
                  <span class="font-semibold text-text">ab CHF 125</span>
                </div>
              </div>
            </div>
            <a href="#contact" 
               class="inline-flex items-center text-primary font-semibold group-hover:text-primary-dark transition-colors">
              Termin buchen
              <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Maniküre Card -->
        <div class="group bg-background rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-primary/5 overflow-hidden">
            <img src="https://static.wixstatic.com/media/a3b5c0_ebc161e4bfdb4a6a95353bdfa51189c2~mv2.jpg/v1/fill/w_726,h_484,al_c,q_80,usm_0.66_1.00_0.01,enc_avif,quality_auto/f6f8fbe5-c450-468e-88ae-9d17a6a370b9_JPG.jpg" 
                 alt="Professionelle Maniküre" 
                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
          </div>
          <div class="p-8">
            <h3 class="font-montserrat text-2xl font-bold text-text mb-4">Maniküre</h3>
            <p class="text-text-light mb-4 leading-relaxed">
              Nehmen Sie sich eine Auszeit – für gepflegte Hände und Ihr persönliches Wohlbefinden.
            </p>
            <div class="bg-primary/10 rounded-lg p-4 mb-4">
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-text">Maniküre</span>
                  <span class="font-semibold text-text">CHF 70</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text">inkl. normaler Nagellack</span>
                  <span class="font-semibold text-text">CHF 85</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text">inkl. Gellack (OPI)</span>
                  <span class="font-semibold text-text">CHF 95</span>
                </div>
              </div>
            </div>
            <p class="text-xs text-text-light mb-6 italic">
              Schneiden • Feilen • Pflege • Lackieren
            </p>
            <a href="#contact" 
               class="inline-flex items-center text-primary font-semibold group-hover:text-primary-dark transition-colors">
              Termin buchen
              <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 lg:py-32 bg-background fade-in-section">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-montserrat text-3xl sm:text-4xl lg:text-5xl font-bold text-text mb-6">
            Unser Team
          </h2>
          <div class="w-24 h-1 bg-primary mx-auto"></div>
          <p class="text-text-light text-lg mt-6 max-w-2xl mx-auto">
            Lernen Sie die Personen kennen, die hinter FUSSPFLEGE BY YANA stehen, und mit Leidenschaft, Erfahrung und Liebe zum Detail für Sie arbeiten.
          </p>
        </div>
        
        <!-- Team Members -->
        <div class="space-y-20">
          
          <!-- Jana/Yana Otto - First -->
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Portrait -->
            <div class="order-2 lg:order-1">
              <div class="aspect-square rounded-2xl shadow-lg overflow-hidden">
                <img src="https://static.wixstatic.com/media/a3b5c0_2cd61d992337400a8eedca4fc80e6b63~mv2.jpg/v1/fill/w_566,h_1034,fp_0.44_0.40,q_85,usm_0.66_1.00_0.01,enc_avif,quality_auto/78f05f94-a962-4cf6-8658-47edeb543d70.jpg" 
                     alt="Yana Otto - Inhaberin und Fusspflegerin" 
                     class="w-full h-full object-cover">
              </div>
            </div>
            
            <!-- About Content -->
            <div class="order-1 lg:order-2">
              <div class="prose prose-lg max-w-none">
                <h3 class="font-montserrat text-3xl font-bold text-text mb-6">Yana Otto</h3>
                <p class="text-primary font-semibold mb-4">Inhaberin & Fusspflegerin</p>
                
                <p class="text-text-light text-lg leading-relaxed mb-6">
                  Mein Name ist Yana – seit über 10 Jahren widme ich mich mit Leidenschaft der professionellen 
                  Fusspflege und der Pflege für die Hände. Mein Anspruch ist: Ästhetik, Präzision und 
                  Wohlbefinden auf höchstem Niveau.
                </p>
                
                <p class="text-text-light text-lg leading-relaxed mb-6">
                  In meinem Studio erwartet Sie eine ruhige, stilvolle Atmosphäre, in der Qualität, 
                  Hygiene und persönliche Betreuung im Mittelpunkt stehen. Jeder Termin ist für mich 
                  und mein Team mehr als nur eine Behandlung – es ist ein Moment der Pflege und Achtsamkeit.
                </p>
                
                <p class="text-text-light text-lg leading-relaxed mb-6">
                  Wir bieten Ihnen mit Leidenschaft und Hingabe umfassende Fusspflege- und 
                  Manikürbehandlungen an.
                </p>
                
                <p class="text-text-light text-lg leading-relaxed font-medium">
                  Ich freue mich, Sie bei Fusspflege by Yana begrüssen zu dürfen.
                </p>
                
                <p class="text-primary text-lg font-montserrat font-medium mt-4">
                  Liebe Grüsse<br>
                  Yana
                </p>
              </div>
            </div>
          </div>
          
          <!-- Ana Fingert - Second -->
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Portrait -->
            <div class="order-1 lg:order-1">
              <div class="aspect-square rounded-2xl shadow-lg overflow-hidden">
                <img src="https://static.wixstatic.com/media/a3b5c0_0c22863d4d2d4781ad0d710a900f1fb5~mv2.jpeg/v1/fill/w_566,h_726,fp_0.46_0.36,q_85,usm_0.66_1.00_0.01,enc_avif,quality_auto/Iana%20Fingert.jpeg" 
                     alt="Ana Fingert - Fusspflegerin" 
                     class="w-full h-full object-cover">
              </div>
            </div>
            
            <!-- About Content -->
            <div class="order-2 lg:order-2">
              <div class="prose prose-lg max-w-none">
                <h3 class="font-montserrat text-3xl font-bold text-text mb-6">Ana Fingert</h3>
                <p class="text-primary font-semibold mb-4">Fusspflegerin</p>
                
                <p class="text-text-light text-lg leading-relaxed mb-6">
                  Ana ist ein geschätztes Mitglied unseres Teams und bringt ihre Expertise und 
                  Erfahrung in der professionellen Fusspflege mit großer Sorgfalt in jeden Termin ein.
                </p>
                
                <p class="text-text-light text-lg leading-relaxed mb-6">
                  Mit ihrer ruhigen und einfühlsamen Art sorgt sie dafür, dass sich unsere Kunden 
                  rundum wohl und gut aufgehoben fühlen. Ihre präzise Arbeitsweise und ihr Auge 
                  für Details machen jeden Besuch zu einem entspannenden Erlebnis.
                </p>
                
                <p class="text-text-light text-lg leading-relaxed mb-6">
                  Ana teilt unsere Leidenschaft für höchste Qualitäts- und Hygienestandards und 
                  sorgt dafür, dass jede Behandlung individuell auf die Bedürfnisse unserer Kunden abgestimmt wird.
                </p>
                
                <div class="bg-primary/10 rounded-lg p-4 mt-6">
                  <p class="text-text font-medium text-center italic">
                    "Jede Behandlung ist für mich eine Möglichkeit, Entspannung und Wohlbefinden zu schenken."
                  </p>
                </div>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-20 lg:py-32 bg-white fade-in-section">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-montserrat text-3xl sm:text-4xl lg:text-5xl font-bold text-text mb-6">
          Das sagen unsere zufriedenen Kundinnen
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto"></div>
      </div>
      
      <!-- Testimonials Carousel -->
      <div class="max-w-4xl mx-auto">
        <div id="testimonials-carousel" class="relative">
          <div class="testimonials-container overflow-hidden">
            <div class="testimonials-track flex transition-transform duration-500 ease-in-out">
              
              <!-- Testimonial 1 - Olivia S. -->
              <div class="testimonial-slide w-full flex-shrink-0 px-4">
                <div class="bg-background rounded-2xl p-8 shadow-lg text-center">
                  <div class="mb-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-primary/20 to-primary/5 rounded-full mx-auto flex items-center justify-center text-3xl">
                      👩
                    </div>
                  </div>
                  <div class="mb-4">
                    <h4 class="font-montserrat font-bold text-primary mb-2">SAUBER UND SUPER LIEB</h4>
                  </div>
                  <blockquote class="text-text-light text-lg italic mb-6">
                    "Perfekte Manicüre und Pedicüre mit Gellack. Das Studio ist wirklich sehr sauber. 
                    Darya hat sehr präzise gearbeitet; es ging im Vergleich auch etwas länger, 
                    aber genauso lange wie vorher angegeben. Komme gerne wieder."
                  </blockquote>
                  <div class="font-montserrat font-semibold text-text">
                    Olivia S.
                  </div>
                </div>
              </div>
              
              <!-- Testimonial 2 - V.W. -->
              <div class="testimonial-slide w-full flex-shrink-0 px-4">
                <div class="bg-background rounded-2xl p-8 shadow-lg text-center">
                  <div class="mb-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-primary/20 to-primary/5 rounded-full mx-auto flex items-center justify-center text-3xl">
                      👩‍💼
                    </div>
                  </div>
                  <div class="mb-4">
                    <h4 class="font-montserrat font-bold text-primary mb-2">UNGLAUBLICHE ARBEIT</h4>
                  </div>
                  <blockquote class="text-text-light text-lg italic mb-6">
                    "Unglaublich was Yana bei Ihrer Arbeit für eine Perfektion an den Tag legt! 
                    Ich bin rundum begeistert und kann Yana mit ihrer herzlichen und 
                    sympathischen Art wärmstens weiterempfehlen!"
                  </blockquote>
                  <div class="font-montserrat font-semibold text-text">
                    V.W.
                  </div>
                </div>
              </div>
              
              <!-- Testimonial 3 - Viktoria W. -->
              <div class="testimonial-slide w-full flex-shrink-0 px-4">
                <div class="bg-background rounded-2xl p-8 shadow-lg text-center">
                  <div class="mb-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-primary/20 to-primary/5 rounded-full mx-auto flex items-center justify-center text-3xl">
                      👵
                    </div>
                  </div>
                  <div class="mb-4">
                    <h4 class="font-montserrat font-bold text-primary mb-2">LIFE CHANGER</h4>
                  </div>
                  <blockquote class="text-text-light text-lg italic mb-6">
                    "Ich komme schon seit über einem Jahr zur Maniküre und Pedicüre in diesen Salon. 
                    Ich bin unglaublich zufrieden mit der Professionalität und Qualität des Materials🥰 
                    Vielen Dank für Ihre Arbeit❤️❤️❤️"
                  </blockquote>
                  <div class="font-montserrat font-semibold text-text">
                    Viktoria W.
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          
          <!-- Navigation Dots -->
          <div class="flex justify-center mt-8 space-x-2">
            <button class="carousel-dot w-3 h-3 rounded-full bg-primary transition-opacity" data-slide="0"></button>
            <button class="carousel-dot w-3 h-3 rounded-full bg-primary/30 transition-opacity" data-slide="1"></button>
            <button class="carousel-dot w-3 h-3 rounded-full bg-primary/30 transition-opacity" data-slide="2"></button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Studio Section -->
  <section id="studio" class="py-20 lg:py-32 bg-background fade-in-section">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-montserrat text-3xl sm:text-4xl lg:text-5xl font-bold text-text mb-6">
          Ein Ort zum Wohlfühlen
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto"></div>
      </div>
      
      <!-- Studio Gallery -->
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-6">
          
          <!-- Gallery Item 1 - Main Studio -->
          <div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 aspect-square">
            <img src="https://static.wixstatic.com/media/a3b5c0_984cbced86094405ad51b736255ddbb1~mv2.jpg/v1/fill/w_2737,h_1272,al_c,q_90,enc_avif,quality_auto/2ce72df3-1170-4531-8b19-ee3b72da3d2c_JPG.jpg" 
                 alt="Studio Interior - Hauptbereich" 
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300"></div>
          </div>
          
          <!-- Gallery Item 2 - Studio Detail -->
          <div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 aspect-square">
            <img src="https://static.wixstatic.com/media/a3b5c0_32a748239d5e4269b6fe6db2885a14d3~mv2.jpg/v1/fill/w_924,h_616,al_c,q_85,usm_0.66_1.00_0.01,enc_avif,quality_auto/IMG_0808.jpg" 
                 alt="Studio Interior - Behandlungsbereich" 
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300"></div>
          </div>
          
          <!-- Gallery Item 3 - Professional Portrait Alternative -->
          <div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 aspect-square">
            <img src="https://static.wixstatic.com/media/a3b5c0_2cd61d992337400a8eedca4fc80e6b63~mv2.jpg/v1/fill/w_566,h_1034,fp_0.44_0.40,q_85,usm_0.66_1.00_0.01,enc_avif,quality_auto/78f05f94-a962-4cf6-8658-47edeb543d70.jpg" 
                 alt="Yana Otto - Professionelle Fusspflege" 
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300"></div>
          </div>
          
